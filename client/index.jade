doctype html
html
  head
    meta(charset='utf-8')
    title jQuery Demo
    link(rel='stylesheet', href='/vendor/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href=isProd ? '/index.min.css' : '/index.css')
    link(rel='shortcut icon', href='/favicon.ico')
  body
    h1 jQuery Demo

    h1 Sentence Generator
    button#clear Clear

    h3 Articles
    span.article a
    span.article the
    
    h3 Nouns
    span.noun dog
    span.noun student
    span.noun house
    span.noun california
    
    h3 Verbs
    span.verb run
    span.verb laugh
    span.verb jump
    span.verb study
    
    h3 Adjectives
    span.adjective large
    span.adjective loud
    span.adjective crazy
    
    h3 Sentence
    #sentence 


    h1 Calculator
    input#x(type='text')
    input#op(type='text')
    input#y(type='text')
    button#calc =
    span#answer

    h1 Sum + Product
    input#numbers(type='text')
    button#go Go
    p sum
    p#sum

    p product
    p#product

    script(src='/vendor/jquery/dist/jquery.min.js')
    script(src='/vendor/lodash/lodash.min.js')
    script(src=isProd ? '/index.min.js' : '/index.js')
